{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "CommonJS",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*.ts",
    "jest.setup.js",
    "jest.config.js"
  ]
}

